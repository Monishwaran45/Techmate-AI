# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/techmate_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=techmate_dev

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=JWT_SECRET
JWT_REFRESH_SECRET=JWT_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# LLM Provider (openai or gemini)
LLM_PROVIDER=gemini

# OpenAI (optional if using Gemini)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Google Gemini (recommended)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Firebase (Optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Stripe (Payment)
STRIPE_SECRET_KEY=STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Application
NODE_ENV=development
PORT=3000
# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:5173,http://localhost:3000
BACKEND_URL=http://localhost:3000

# Vector Database (if using Pinecone)
PINECONE_API_KEY=PINECONE_API_KEY
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX=techmate-embeddings

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL_RECIPIENTS=admin@techmate.ai,ops@techmate.ai
